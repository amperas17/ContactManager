<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/linepaperbitmap"
    android:layout_margin="5dp"
    >

    <ImageView
        android:id="@+id/ivPhotoAddContactFrag"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:background="@drawable/image_style"
        android:src="@drawable/messagephone"
        >
    </ImageView>

    <Button
        android:id="@+id/btMakePhotoAddContactFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Photo"
        />
    <Button
        android:id="@+id/btGetLastIDAddContactFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last ID"
        />

    <LinearLayout
        android:id="@+id/llNameAddContactFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tvNameAddContactFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:id="@+id/etNameAddContactFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="#000"
            android:textSize="22sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llPhoneNumberAddContactFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:id="@+id/etPhoneNumberAddContactFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:text="1"
            android:textColor="#000"
            android:textSize="22sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llIsFavoriteAddContactFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Favorites"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_marginRight="15dp"/>

        <CheckBox
            android:id="@+id/chbIsFavoriteAddContactFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAddAddContactFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"/>
        <Button
            android:id="@+id/btDeleteAddContactFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete First"/>
        <Button
            android:id="@+id/btSelectAddContactFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select All"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvDBListAddContactFrag"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>


</LinearLayout>